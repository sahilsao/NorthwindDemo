@page "/exercises/dashboard"

@using NorthwindDemo.Components.Layout.Exercises;
@using NorthwindDemo.Sessions

@layout ExercisesLayout

@inject NavigationManager NavigationManager

<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h5" GutterBottom="true">50 Practice Queries of the Northwind Database</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudStack Row="true">
            <MudButton Variant="Variant.Filled" OnClick="@(() => NavigationManager.NavigateTo("/exercises/exercise1"))">
                Exercise 1
            </MudButton>
            <MudButton Variant="Variant.Filled" OnClick="@(() => NavigationManager.NavigateTo("/exercises/exercise2"))">
                Exercise 2
            </MudButton>
            <MudButton Variant="Variant.Filled" OnClick="@(() => NavigationManager.NavigateTo("/exercises/exercise3"))">
                Exercise 3
            </MudButton>            
        </MudStack>
    </MudItem>
</MudGrid>
