@page "/customer/customerdashboard"

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using NorthwindDemo.Components.Layout.Customer;
@using System.ComponentModel.DataAnnotations;
@using Microsoft.EntityFrameworkCore;
@using NorthwindDemo.Context;
@using NorthwindDemo.Entities;

@layout CustomerLayout

@inject NavigationManager NavigationManager
@inject DbContextNorthwind DbContext
@inject ProtectedSessionStorage SessionStorage

<PageTitle>Customer Dashboard</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@UserName Dashboard</MudText>

@code {

    public string? UserName { get; set; }
    private bool _hasLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasLoaded)
        {
            var result = await SessionStorage.GetAsync<string>("CustomerName");
            UserName = result.Success ? result.Value : "Unknown";
            _hasLoaded = true;   
            
            if (UserName == "Unknown")
            {
                NavigationManager.NavigateTo("/customer/customerlogin");
            }

            StateHasChanged(); // Trigger UI re-render
        }
    }
   
}
