@page "/customer/customerlogout"

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using NorthwindDemo.Components.Layout

@layout EmptyLayout

@inject ProtectedSessionStorage SessionStorage
@inject NavigationManager NavigationManager

@code {

    protected override async Task OnInitializedAsync()
    {
        HashSet<string> sessionKeys = new() { "CustomerID", "CustomerName" };
        foreach (var key in sessionKeys)
        {
            await SessionStorage.DeleteAsync(key);
        }
        // Logout user
        NavigationManager.NavigateTo("/customer/customerlogin");
    }


}
